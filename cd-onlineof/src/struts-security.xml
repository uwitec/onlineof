<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- 系统用户管理 -->
	<package name="usersManager" extends="common-default">
		<action name="searchUsersByPage" class="usersAction" method="searchUsersByPage">
		     <result name="success">
                /administrator/security/usersManager.jsp
             </result>
	     </action>
	     <action name="forwardAddUsers" class="usersAction" method="forwardAddUsers">
		     <result name="success">
                /administrator/security/usersAdd.jsp
             </result>
	     </action>
	     <action name="addUsers" class="usersAction" method="addUsers">
		     <result name="success">
                /administrator/security/usersManager.jsp
             </result>
	     </action>
	     <action name="deleteUsers" class="usersAction" method="deleteUsers">
		     <result name="success">
                /administrator/security/usersManager.jsp
             </result>
	     </action>
	     <action name="editUsres" class="usersAction" method="editUsres">
		     <result name="success">
                /administrator/security/usersEdit.jsp
             </result>
             <result name="error">/administrator/error.jsp</result> 
	     </action>
	     <action name="updateUsers" class="usersAction" method="updateUsers">
		     <result name="success">
                /administrator/security/usersManager.jsp
             </result>
	     </action>
	     <action name="forwardPasswordSet" class="usersAction" method="forwardPasswordSet">
		     <result name="success">
                /administrator/security/passwordSet.jsp
             </result>
	    </action>
	</package>
	
	<!-- 角色管理 -->
	<package name="roleManager" extends="common-default">
		<action name="searchRolesByPage" class="roleAction" method="searchRolesByPage">
		     <result name="success">
                /administrator/security/roleManager.jsp
             </result>
	     </action>
	     <action name="deleteRole" class="roleAction" method="deleteRole">
		     <result name="success">
                /administrator/security/roleManager.jsp
             </result>
	     </action>
	     <action name="forwardAddNewRole" class="roleAction" method="forwardAddNewRole">
		     <result name="success">
                /administrator/security/roleEdit.jsp
             </result>
	     </action>
	     <action name="editRole" class="roleAction" method="editRole">
		     <result name="success">
                /administrator/security/roleEdit.jsp
             </result>
	     </action>
	     <action name="addRole" class="roleAction" method="addRole">
		     <result name="success">
                /administrator/security/roleManager.jsp
             </result>
	     </action>
	     <action name="updateRole" class="roleAction" method="updateRole">
		     <result name="success">
                /administrator/security/roleManager.jsp
             </result>
	     </action>
	     <action name="setRolePrivilege" class="roleAction" method="setRolePrivilege">
		     <result name="success">
                /administrator/security/rolePrivilegeSet.jsp
             </result>
	     </action>
	     <action name="saveRolePrivilege" class="roleAction" method="saveRolePrivilege">
		     <result name="success">
                /administrator/security/rolePrivilegeSet.jsp
             </result>
	     </action>
	</package>
	
	<!-- 权限管理 -->
	<package name="privilegeManager" extends="common-default">
		<action name="privilegeManager" class="privilegeAction" method="doPrivilegeManager">
		     <result name="success">
                /administrator/security/privilege.jsp
             </result>
	    </action>
	    <action name="editPrivilege" class="privilegeAction" method="editPrivilege">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="updatePrivilege" class="privilegeAction" method="updatePrivilege">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="forwardAddNewPrivilege" class="privilegeAction" method="forwardAddNewPrivilege">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="addPrivilege" class="privilegeAction" method="addPrivilege">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="deletePrivilegeById" class="privilegeAction" method="deletePrivilegeById">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="getPrivilegeInfo" class="privilegeAction" method="getPrivilegeInfo">
		     <result name="success">
                /administrator/security/privilegeEdit.jsp
             </result>
	    </action>
	    <action name="selectParentPrivilege" class="privilegeAction" method="selectParentPrivilege">
		     <result name="success">
                /administrator/security/privilegeTree.jsp
             </result>
	    </action>
	</package>
</struts>
