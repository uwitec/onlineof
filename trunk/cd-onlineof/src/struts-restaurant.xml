<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 餐厅信息管理 -->
	<package name="restaurantManager" extends="common-default">
		<action name="loadAllRestaurant" class="usersAction"
			method="loadAllRestaurant">
			<result name="success">/bookRestaurant.jsp</result>
		</action>
		<!-- 餐厅分类的分页信息 -->
		<action name="restaurantKindPageAction"
			class="restaurantKindAction" method="getRestaurantKindPage">
			<result name="success">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 编辑餐厅分类信息 -->
		<action name="editRestaurantKindAction"
			class="restaurantKindAction" method="editRestaurantKind">
			<result name="success">
				/administrator/restaurant/restaurant_kindEdit.jsp
			</result>
			<result name="input">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 保存餐厅分类信息 -->
		<action name="savaRestaurantKindAction" class="restaurantKindAction" method="savaRestaurantKind">
			<result name="success" type="redirect">
				restaurantKindPageAction.do
			</result>
		</action>
		<!-- 删除餐厅分类信息 -->
		<action name="delRestaurantKindAction" class="restaurantKindAction" method="deleteRestaurantKind">
			<result name="success">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 餐厅信息 -->
		<action name="getRestaurantPageAction" class="restaurantAction" method="getRestaurantPage">
			<result name="success">
				/administrator/restaurant/restaurantList.jsp
			</result>
		</action>
	</package>
</struts>
