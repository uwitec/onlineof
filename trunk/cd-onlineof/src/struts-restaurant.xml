<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 餐厅信息管理 -->
	<package name="restaurantManager" extends="exception-default">
		<action name="loadAllRestaurant" class="usersAction"
			method="loadAllRestaurant">
			<result name="success">/bookRestaurant.jsp</result>
		</action>
		<!-- 餐厅分类的分页信息 -->
		<action name="restaurantKindPageAction"
			class="restaurantKindAction" method="getRestaurantKindPage">
			<result name="success">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 编辑餐厅分类信息 -->
		<action name="editRestaurantKindAction"
			class="restaurantKindAction" method="editRestaurantKind">
			<result name="success">
				/administrator/restaurant/restaurant_kindEdit.jsp
			</result>
			<result name="input">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 保存餐厅分类信息 -->
		<action name="savaRestaurantKindAction"
			class="restaurantKindAction" method="savaRestaurantKind">
			<result name="success" type="redirect">
				restaurantKindPageAction.do
			</result>
		</action>
		<!-- 删除餐厅分类信息 -->
		<action name="delRestaurantKindAction"
			class="restaurantKindAction" method="deleteRestaurantKind">
			<result name="success">
				/administrator/restaurant/restaurant_kindList.jsp
			</result>
		</action>
		<!-- 餐厅信息 -->
		<action name="getRestaurantPageAction" class="restaurantAction"
			method="getRestaurantPage">
			<result name="success">
				/administrator/restaurant/restaurantList.jsp
			</result>
		</action>
		<action name="editRestaurantAction" class="restaurantAction"
			method="editRestaurant">
			<result name="success">
				/administrator/restaurant/restaurantEdit.jsp
			</result>
		</action>
		<action name="savaRestaurantAction" class="restaurantAction"
			method="savaRestaurant">
			<result name="success">
				/administrator/restaurant/restaurantList.jsp
			</result>
			<interceptor-ref name="fileUpload"></interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="deleteRestaurantAction" class="restaurantAction"
			method="deleteRestaurant">
			<result name="success">
				/administrator/restaurant/restaurantList.jsp
			</result>
		</action>
		<!-- 餐厅预览 -->
		<action name="viewRestaurantAction" class="restaurantAction"
			method="restaurantPreView">
			<result name="success">
				/administrator/restaurant/restaurantPreview.jsp
			</result>
		</action>
		<!-- 餐厅菜类别处理 -->
		<action name="getFoodKindPageAction" class="food_KindAction"
			method="getFoodKindPage">
			<result name="success">
				/administrator/restaurant/food_kindList.jsp
			</result>
		</action>
		<action name="editFoodKindAction" class="food_KindAction"
			method="editFoodKind">
			<result name="success">
				/administrator/restaurant/food_kindEdit.jsp
			</result>
		</action>
		<action name="savaFoodKindAction" class="food_KindAction"
			method="savaFoodKind">
			<result name="success">
				/administrator/restaurant/food_kindList.jsp
			</result>
		</action>
		<action name="deleteFoodKindAction" class="food_KindAction"
			method="deleteFoodKind">
			<result name="success">
				/administrator/restaurant/food_kindList.jsp
			</result>
		</action>
		<!-- 菜信息管理 -->
		<action name="getFoodPageAction" class="foodAction"
			method="getFoodPage">
			<result name="success">
				/administrator/restaurant/foodList.jsp
			</result>
		</action>
		<action name="editFoodAction" class="foodAction"
			method="editFood">
			<result name="success">
				/administrator/restaurant/foodEdit.jsp
			</result>
		</action>
		<action name="savaFoodAction" class="foodAction"
			method="savaFood">
			<result name="success">
				/administrator/restaurant/foodList.jsp
			</result>
		</action>
		<action name="deleteFoodAction" class="foodAction"
			method="deleteFood">
			<result name="success">
				/administrator/restaurant/foodList.jsp
			</result>
		</action>
		<action name="foodPreViewAction" class="foodAction" method="foodPreView">
			<result name="success">
				/administrator/restaurant/foodPreview.jsp
			</result>
		</action>
	</package>
</struts>
